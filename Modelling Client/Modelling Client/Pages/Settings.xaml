        <!--
        <TabControl ItemsSource="{Binding allUAVs}">
            <TabControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:UAVSettings}">
                    <TabItem Header="{Binding ID}">
                    </TabItem>
                </DataTemplate>
            </TabControl.ItemTemplate>
            
            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type models:UAVSettings}">
                        <StackPanel Orientation="Horizontal">
