<Page x:Class="Modelling_Client.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modelling_Client.Pages" xmlns:viewmodels="clr-namespace:Modelling_Client.ViewModels"
      mc:Ignorable="d" 
      Height="75" Width="200"
      Title="MenuPage">

    <Grid Background="AntiqueWhite">
        <StackPanel>
            <GroupBox Header="Выбор режима моделирования">
                <StackPanel Orientation="Vertical">
                    <RadioButton Content="Одиночный" IsEnabled="False"/>
                    <RadioButton Content="Многопользовательский" IsChecked="True"/>
                </StackPanel>
            </GroupBox>

            <DockPanel LastChildFill="True">
                <TextBox DockPanel.Dock="Right"
                         Margin="0 0 5 0"
                         MinWidth="30"/>
                <TextBlock Text="Количество БПЛА"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
